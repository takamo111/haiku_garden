<div class="register_back_contents">
    <div class= tweet_brank></div>
    <div class= tweet_brank></div>
  <div class="authform">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3>サインイン</h3>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%- if devise_mapping.registerable? %>
          <%= link_to '新規登録', new_registration_path(resource_name), class: 'right'  %>
        <% end -%>
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%- if devise_mapping.recoverable? %>
          <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: 'right' %>
        <% end -%>
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
        <%= f.submit 'サインイン', :class => 'button right' %>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="width:150px">
            <label>
              <%= f.check_box :remember_me %> 情報を保存
            </label>
          </div>
        <% end -%>
    <% end %>
  </div>
</div>
