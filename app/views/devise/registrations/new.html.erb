<div class="register_back_contents">
  <div class= tweet_brank></div>
  <div class= tweet_brank></div>
  <div class= tweet_brank></div>
  
  <div class="authform">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h3>新規登録</h3>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :name, autofocus: true, class: 'form-control', autocomplete: "name" %>
      
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
      </div>
      <div class="form-group">

        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit '登録', :class => 'button right' %>
      </div>
    <% end %>
  </div>
</div>